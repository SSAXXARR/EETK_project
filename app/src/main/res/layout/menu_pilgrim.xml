<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="66dp"
        android:fontFamily="@font/solid"
        android:text="Неизвестный пользователь"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/solid"
        android:text="Роль - пилигрим"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="122dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/boy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/myrasp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_weight="4"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="220dp"
        android:src="@drawable/calendar123"
        android:background="@drawable/mybutton3"
        android:text="Мое расписание"
        android:textColor="@color/white"
        android:textSize="25dp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:drawable="@drawable/fireguy"/>
    <Button
        android:id="@+id/myrasp1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/mybutton2registration"
        android:text="Расписание преподавателей"
        android:textColor="@color/white"
        android:textSize="20dp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:drawable="@drawable/fireguy"/>

    <ImageButton
        android:id="@+id/myrasp2"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="220dp"
        android:layout_weight="4"
        android:padding="20dp"
        android:background="@drawable/mybutton4"
        android:scaleType="fitCenter"
        android:src="@drawable/butterfly123"
        android:text="Мое расписание"
        android:textColor="@color/white"
        android:textSize="20dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myrasp" />

    <Button
        android:id="@+id/autoriz"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/mybutton"
        android:text="Авторизоваться"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myrasp"
        style="?android:attr/borderlessButtonStyle"
        tools:ignore="OnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoriz" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>